#!/system/bin/sh
# adb: wrapper to run adb from terminal
# osm0sis @ xda-developers
# ThRE Team

dir="$(cd "$(dirname "$0")"; pwd)";
pub="/data/user/0/id.next.manager/files/tmp";
mkdir -p $pub
export HOME=/data/user/0/id.next.manager/files/tmp;
export TMPDIR=/data/user/0/id.next.manager/files/tmp;
$dir/adb.bin "$@";

